{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "strict": true,
    "isolatedModules": false,
    "jsx": "react",
    "esModuleInterop": true,
    "incremental": false,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "allowUmdGlobalAccess": true,
    "importHelpers": true,
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "lib": ["ESNext"]
  },

  "include": ["packages/**/*.ts", "packages/**/*.tsx", "types/**/*.d.ts"],

}
